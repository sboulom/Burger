<div class="container">
    <div class="row">
        <div class="col-sm-4">
            {{#each burgerData}}
            {{!-- from mysqlfile --}}
            {{#unless devoured}}
            <div>
            <input type="hidden" class = "burger_id" value={{id}}>
            {{burger_name}} <button class="devoured">Devoured</button>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-sm-4">
            <input type="text" id="burgerName">
            <button id="addBurger">Add Burger</button>
            <button id="reset">Reset</button>
        </div>
        <div class="col-sm-4">
            {{#each burgerData}}
            {{#if devoured}}
            Devoured
            {{burger_name}}
            <br>
            {{/if}}
            {{/each}}


        </div>
    </div>

</div>